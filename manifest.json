{
  "manifest_version": 2,

  "name": "Highlight to Hilite.me",
  "description": "This extension allows the user to highlight code to send to hilite.me",
  "version": "1.0",

  "options_page": "options/options.html",

  "browser_action": {
    "default_icon":   "icon.png",
    "default_popup":  "popup.html"
  },

  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "storage",
    "http://hilite.me/"
  ],

  "background": {
    "scripts": ["main.js"],
    "persistent": false
  }
}
